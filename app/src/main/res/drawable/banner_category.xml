<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Capa inferior: color_4 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_4"/>
        </shape>
    </item>

    <!-- Capa superior: color_3 -->
    <item>
        <rotate
            android:fromDegrees="30"
            android:pivotX="0%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="@color/color_3"/>
            </shape>
        </rotate>
    </item>

    <!-- Nueva capa superior: color_5 desde la esquina superior derecha -->
    <item>
        <rotate
            android:fromDegrees="-30"
            android:pivotX="100%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="@color/color_5"/>
            </shape>
        </rotate>
    </item>

</layer-list>
